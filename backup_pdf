<body>

    <!-- Header Section -->
    <div class="header">
        <img src="static/logo.png" alt="Logo">
        <h1>Let's Talk with Your PDF</h1>
    </div>

    <!-- Upload Section -->
    <div class="upload-container">
        <h2>Upload Your PDF</h2>
        <input type="file" id="pdfFile" accept="application/pdf">
        <button onclick="uploadPDF()">Upload</button>
        <p id="status"></p>
    </div>

    <!-- Chat Section -->
    <div id="chatContainer">
        <h2>Chat with PDF</h2>
        <div class="chat-box" id="chatBox"></div>
        <input type="text" id="userInput" placeholder="Ask a question...">
        <button onclick="askQuestion()">Ask</button>
    </div>

    <script>
        function uploadPDF() {
            let fileInput = document.getElementById('pdfFile');
            let file = fileInput.files[0];
            if (!file) {
                alert('Please select a PDF file.');
                return;
            }

            let formData = new FormData();
            formData.append("file", file);

            fetch('/upload_pdf', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById("status").innerText = "Upload successful!";
                    document.getElementById("chatContainer").style.display = "block";
                } else {
                    document.getElementById("status").innerText = "Upload failed!";
                }
            })
            .catch(error => {
                console.error('Error:', error);
                document.getElementById("status").innerText = "Error uploading file.";
            });
        }

        function askQuestion() {
    let userInput = document.getElementById("userInput").value;
    if (!userInput) {
        alert('Please enter a question.');
        return;
    }

    let chatBox = document.getElementById("chatBox");
    let userMessage = `<div class='message user-message'>${userInput}</div>`;
    chatBox.innerHTML += userMessage;
    chatBox.scrollTop = chatBox.scrollHeight;

    fetch('/ask', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({question: userInput})
    })
    .then(response => response.json())
    .then(data => {
        let botMessage = `<div class='message bot-message'>${data.answer}</div>`;
        chatBox.innerHTML += botMessage;
        chatBox.scrollTop = chatBox.scrollHeight;
    })
    .catch(error => {
        console.error('Error:', error);
        let botMessage = `<div class='message bot-message'>Error retrieving response.</div>`;
        chatBox.innerHTML += botMessage;
        chatBox.scrollTop = chatBox.scrollHeight;
    });
}

    </script>
</body>
